@model List<Film>
<head>
    <title>Filmler</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css">
</head>
<body>

    
    <h1 class="text-center" style="margin: 20px;">Filmler</h1>
    <div class="row">
    <div class="film-box">
         @foreach(var film in Model){
            <div class="col-3">
                <div class="card">
                    <img class="image" src="@film.ImageUrl??"wwwroot\images\noimage.png")" alt="@film.FilmName"/>
                    <div class="card-body" style="color: black;">
                        <h3 class="card-title">@film.FilmName</h3>
                        <h5 class="card-title">@film.FilmDirector</h5>
                    
                    <div class="buttons">
                        <button class="button-blue" data-filmid="@film.FilmId">@film.LikeCount</button>

                        <button class="button-red" data-filmid="@film.FilmId">@film.WatchList</button>
                    </div>
                </div>
            </div></div>}
           
       </div>         
            
</body>


                
                    
               